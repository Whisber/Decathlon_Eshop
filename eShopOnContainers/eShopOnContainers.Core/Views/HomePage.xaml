                            <ImageButton Source="kampcantaAnasayfa.PNG" HorizontalOptions="Start" Margin="0,0,0,0"/>
                        </StackLayout>
                    </ScrollView>
                    <Label Text="Giyim" FontSize="16" FontAttributes="Bold" Margin="10,5,0,5" TextColor="Black"/>
